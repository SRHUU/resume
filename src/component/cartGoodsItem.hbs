<div class="col-12">
    <div class="card pt-2 pb-2 px-3 mb-3">
        <div class="row">
            <div class="col-2">
                <img class="card-img-top" src="{{image}}" alt="{{name}}" width="110" height="110">
            </div>

            <div class="col-4">{{description}}</div>

            <div class="col-2 ps-5 mt-4">
                {{#with price}}
                <div>{{title}}</div>
                <div>{{value}}</div>
                {{/with}}
            </div>

            <div class="col-1 mt-4">{{amount}}</div>

            <div class="col-2 ps-5">
                {{#each buttons}}

                {{#if isPrimary}}
                <button class="btn btn-primary mt-3">{{text}}</button>
                {{/if}}

                {{#if isDanger}}
                <button class="btn btn-outline-danger my-3">{{text}}</button>
                {{/if}}

                {{/each}}
            </div>
        </div>
    </div>
</div>