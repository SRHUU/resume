<div class="col-12">
    <div class="card pt-2 pb-2 px-1 mb-3">
        <div class="row">

            <div class="col-3 mt-4">
                <div>{{number}}</div>
                <div>{{status}}</div>
            </div>

            <div class="col-2 ps-5 mt-4">
                {{#with amount}}
                <div>{{title}}</div>
                <div>{{value}}</div>
                {{/with}}
            </div>

            <div class="col-4">
                <div class="row">
                    {{#each images}}
                    <div class="col-4">
                        <img class="card-img-top ms-4" src="{{this}}" alt="picsum.photos">
                    </div>
                    {{/each}}
                </div>

            </div>

            <div class="col-2 ps-5">
                {{#with button}}

                {{#if isPrimary}}
                <a href="{{link}}" class="btn btn-primary mt-4 ms-5">{{text}}</a>
                {{/if}}

                {{/with}}
            </div>
        </div>
    </div>
</div>