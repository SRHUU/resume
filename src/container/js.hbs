{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <main>

        <section class="mt-4 mx-4">
            <h1> {{name}}</h1>
            <div>
                <em class="mb-2">{{description}}</em>
                {{#with history}}
                <p>Founder: {{founder}}</p>
                <p>Year: {{year}}</p>
                {{/with}}
            </div>

            <hr>

        </section>

        <section class="mt-4 mx-4">
            {{>title data="Techncal information" big=true}}

            <hr>
            <br>

            <div>
                {{>title data="Types:" big=false}}
                <br>

                <ul>
                    {{#each types}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>

            </div>

            <hr>


            <div class="my-" 3>
                {{>title data="Syntax" big=false}}
                <br>
                {{#with syntax}}

                <div>
                    <b>Variables:</b>
                    <ul class="mt-2">
                        {{#each variables}}
                        <li><span class="badge text-bg-primary">{{this}}</span></li>
                        {{/each}}
                    </ul>

                </div>


                <div class="mt-2">
                    <b>Functions:</b>
                    <ul class="mt-2">
                        {{#each functions}}
                        <li><span class="badge text-bg-secondary">{{this}}</span></li>
                        {{/each}}
                    </ul>

                </div>

                <br>

                <div>
                    <b>Conditionals:</b>
                    <ul class="mt-2">
                        {{#each conditionals}}
                        <li><span class="badge text-bg-success">{{this}}</span></li>
                        {{/each}}
                    </ul>

                </div>

                <div>
                    <b>Loops:</b>
                    <ol class="mt-2">
                        {{#each loops}}
                        <li><span class="badge text-bg-warning">{{this}}</span></li>
                        {{/each}}
                    </ol>

                </div>

                <div>
                    <b>Classes:</b>
                    <ol class="mt-2">
                        {{#each classes}}
                        <li><span class="badge text-bg-info">{{this}}</span></li>
                        {{/each}}
                    </ol>

                </div>

                {{/with}}

            </div>

            <hr>

            <div class="mt-2">
                {{>title data="Features:" big=false}}
                <ul class="mt-2">
                    {{#each features}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>

            <hr>

            <div class="mt-2">
                {{>title data="Libraries:" big=false}}

                <ul>
                    {{#each libraries}}
                    <li><button type="button" class="btn btn-link">{{this}}</button></li>
                    {{/each}}
                </ul>
            </div>

            <hr>

            <div class="mt-2">
                {{>title data="Tools:" big=false}}
                <br>

                <ol>
                    {{#each tools}}
                    <li><button type="button" class="btn btn-outline-info">{{this}}</button></li>
                    {{/each}}
                </ol>
            </div>

            <hr>

            <div class="mt-2">
                {{>title data="Community:" big=false}}
                <br>

                <ul>
                    {{#each community}}
                    <li class="my-2">
                        <div class="row">

                            <button type="button" class="btn btn-link col-3 text-start">{{name}}</button>

                            <button type="button" class="btn btn-primary btn-sm col-3">{{type}}</button>




                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>

        </section>

    </main>

</div>

