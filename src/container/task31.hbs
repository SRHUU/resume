{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>

    <div class="row gy-3">

        {{!------------------------------Up-to down #1-----------------------------}}
        <div class="col-8">
            {{#with navigation}}
            <div>
                {{#each links}}
                <a href="{{href}}" class="btn btn-link">{{text}}</a>
                {{/each}}


                {{#with button}}
                <a href="{{href}}" class="btn btn-primary btn-sm">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
        </div>
        {{!---------------------------------End #1---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #2-----------------------------}}
        <section class="col-5">
            {{#with header}}
            <div>
                <h1>{{title}}</h1>
                <br>
                <p>{{description}}</p>
                {{#with button}}
                <a href="{{href}}" class="btn btn-primary btn-sm">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
        </section>
        {{!---------------------------------End #2---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #3-----------------------------}}
        <section class="col-12">
            <div class="row gx-2 gy-4">
                {{#with city}}
                <h2>{{title}}</h2>

                {{#each cards}}
                <div class="col-5">
                    <div class="card">
                        {{#with picture}}
                        <img class="card-img-top" src="{{src}}" alt="{{alt}} text-bg-secondary">
                        {{/with}}

                        <div class="card-body ">
                            <h5>{{title}}</h5>
                            <p>{{description}}</p>

                            {{#with button}}
                            <a href="{{href}}" class="btn btn-primary">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
        </section>
        {{!---------------------------------End #3---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #4-----------------------------}}
        <section class="col-7">
            <div class="row gx-2 gy-4">
                {{#with winner}}
                <h2>{{title}}</h2>

                {{#with table}}
                <table class="table">
                    <thead>
                        <tr>
                            {{#each head}}
                            <th>
                                {{this}}
                            </th>
                            {{/each}}
                        </tr>
                    </thead>

                    <tbody>
                        <div class="list-group list-group-flush">
                            {{#each user}}
                            <tr>
                                <th class="list-group=item">
                                    {{place}}
                                </th>

                                <td class="list-group=item">
                                    {{name}}

                                </td>

                                <td class="list-group=item">
                                    {{surname}}
                                </td>

                                <td class="list-group=item">
                                    "{{nickname}}"
                                </td>
                            </tr>
                            {{/each}}
                        </div>
                    </tbody>
                </table>
                {{/with}}

            </div>
            {{/with}}
        </section>
        {{!---------------------------------End #4---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #5-----------------------------}}
        <section class="col-12">
            <div class="row gx-2 gy-4">
                {{#with gallery}}
                <h2>{{title}}</h2>

                {{#each cards}}
                <div class="col-4">
                    <div class="card">
                        <div class="card-header">
                            {{name}}
                        </div>

                        <ul class="list-group list-group-flush">
                            {{#each items}}
                            <li class="list-group-item">
                                {{this}}
                                {{/each}}
                            </li>
                        </ul>
                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
        </section>
        {{!---------------------------------End #5---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #6-----------------------------}}
        <section class="col-12">
            <div class="row gx-2 gy-4">
                {{#with relaxion}}
                <div class="display-3">{{title}}</div>

                {{#each cards}}

                <div class="col-6">
                    <div class="card text-bg-secondary">
                        <div class="card-header">
                            {{header}}
                        </div>

                        <div class="card-body">
                            <h6>{{title}}</h6>
                            <div>{{description}}</div>

                        </div>

                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
        </section>
        {{!---------------------------------End #6---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #7-----------------------------}}
        <section class="col-12">
            <div class="row gx-2 gy-4">
                {{#with rest}}

                {{#each cards}}
                <div class="col-6">
                    <div class="card">
                        <div class="card-header text-center">
                            {{header}}
                        </div>

                        <div class="card-body text-center">
                            <h6>{{title}}</h6>
                            <p>{{description}}</p>
                            <a href="#" class="btn btn-primary">{{button}}</a>
                        </div>

                        <div class="card-footer text-center">
                            <div>{{footer}}</div>
                        </div>

                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
        </section>
        {{!---------------------------------End #7---------------------------------}}
        <hr>
        {{!------------------------------Up-to down #8-----------------------------}}
        <section class="col-12">
            <div class="row gx-2 gy-4">
                {{#with proposition}}
                <div class="display-2">{{title}}</div>

                {{#each card}}
                <div class="col-5">
                    <div class="card text-bg-warning">
                        <div class="card-header">
                            {{header}}
                        </div>

                        <div class="card-body">
                            <h6>{{title}}</h6>
                            <p>{{description}}</p>

                        </div>
                    </div>
                </div>
                {{/each}}

                {{/with}}
            </div>
        </section>
        {{!---------------------------------End #8---------------------------------}}

    </div>

</main>

<hr>
{{!------------------------------Up-to down #9-----------------------------}}
<footer>
    <div class="row gy-4">

        <div class="col-8">
            <div class="row gx-2 gy-2">
                {{#with footer}}
                <h5>{{title}}</h5>

                <nav>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    {{#each navigation}}
                                    <div class="list-group-item">
                                        <a href="{{href}}" class="btn btn-link" target="_blank">{{text}}</a>
                                        <br>
                                        <br>
                                    </div>
                                    {{/each}}
                                </td>

                                <td>
                                    {{#each socialMedia}}
                                    <a href="{{link}}" class="btn btn-outline-dark" target="_blank">{{name}}</a>
                                    <br>
                                    <br>
                                    {{/each}}
                                </td>

                                <td>
                                    {{#each partners}}
                                    <a href="{{link}}" class="btn btn-outline-info" target="_blank">{{name}}</a>
                                    <br>
                                    <br>
                                    {{/each}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </nav>

                {{/with}}
            </div>
        </div>
    </div>
</footer>
{{!---------------------------------End #9---------------------------------}}


