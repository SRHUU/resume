{{!--
Це код container файлу для shoporder сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/shoporder"
--}}

<main>

    {{!------------------------------Up-to down #1-----------------------------}}
    <header>
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    {{#if href}}
                    <a href="{{href}}" class="nav-link pe-1 py-3">{{text}}</a>
                    {{else}}
                    <a href="{{href}}" class="nav-link disabled pe-1 py-3">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
                <a href="{{href}}" class="nav-link disabled pe-1 py-3">Disabled</a>
            </div>
        </div>
        {{/with}}
    </header>
    {{!---------------------------------End #1---------------------------------}}

    {{!------------------------------Up-to down #2-----------------------------}}
    <section>
        <div>
            {{#with formBlock}}

            <div class="row">
                <div class="col-8">
                    <h1 class="mt-5">{{header}}</h1>
                    <div class="mt-4">
                        {{#with rating}}
                        <div>{{title}}: {{value}}</div>
                        {{/with}}
                    </div>
                    {{!--actionBlock --}}
                    {{#with actionBlock}}

                    <div class="nav nav-tabs mt-4 text-center">
                        {{#each tabs}}
                        {{#if isActive}}
                        <a href="/shopreview" class="nav-link active col-3">{{text}}</a>
                        {{else}}
                        <a href="/#" class="nav-link col-4">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>

                    <hr class="my-5">

                    <div class="">
                        <div class="mt-2 mb-2">
                            <div class="card px-2 py-2">
                                {{#with report}}
                                <div>
                                    <label class="form-label mt-2">{{title}}</label>
                                    {{#with button}}
                                    <div>
                                        <a href="{{link}}" class="btn btn-secondary col-4 my-2">{{text}}</a>
                                    </div>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                        </div>
                    </div>

                    <hr class="my-5">

                    {{!--feedbackBlock --}}
                    {{#with ../feedbackBlock}}
                    <h2 class="my-5">{{title}}</h2>
                    <div>
                        <div class="row my-5">
                            {{#each buttons}}
                            {{#if isWarning}}
                            <div class="col-3">
                                <a href="{{link}}" class="btn btn-warning">{{text}}</a>
                            </div>

                            {{/if}}

                            {{#if isSuccess}}
                            <div class="col-4">
                                <a href="{{link}}" class="btn btn-success mx-2">{{text}}</a>
                            </div>
                            {{/if}}

                            {{#if isDanger}}
                            <div class="col-4">
                                <a href="{{link}}" class="btn btn-danger me-2">{{text}}</a>
                            </div>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                    {{!--End feedbackBlock --}}

                    {{/with}}
                </div>
                {{!--End actionBlock --}}

                {{!--goodsInfo --}}
                <div class="col-4">
                    {{#with goodsInfo}}

                    <div class="card pt-2 pb-2 px-1 mt-5">
                        <div>
                            <img class="ms-2 my-3" src="{{photo}}" alt={{name}}>
                        </div>
                        <h5 class="ms-3">{{name}}</h5>
                    </div>

                    <div class="card pt-2 pb-2 px-1 mb-3 mt-3">
                        <h5 class="ms-2">{{price}}</h5>
                        {{#if inMarket}}
                        <div class="ms-2">Є в наявності</div>
                        {{else}}
                        <div class="ms-2">Немає в наявності</div>
                        {{/if}}

                        {{#each buttons}}
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-primary col-8 ms-2 my-3">{{text}}</a>
                        {{/if}}

                        {{#if isSecondary}}
                        <a href="{{link}}" class="btn btn-secondary col-10 ms-2 mb-3">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>

                    <div>
                        {{#with seller}}
                        <div class="card pt-2 pb-2 px-1 mb-3 mt-3">
                            <div class="ms-2">{{title}}: <b>{{value}}</b></div>
                        </div>
                        {{/with}}
                    </div>

                    {{/with}}
                </div>
                {{!--End goodsInfo --}}
            </div>

            {{/with}}
        </div>
    </section>
    {{!---------------------------------End #2---------------------------------}}

    <hr class="mb-5">

    {{!------------------------------Up-to down #3-----------------------------}}
    <section>
        <div>
            {{#each reviewList}}

            {{> reviewItem}}

            {{/each}}
        </div>
    </section>
    {{!---------------------------------End #3---------------------------------}}

    {{!------------------------------Up-to down #4-----------------------------}}
    <section class="col-12">
        <div class="card text-bg-success my-5 text-center">
            {{#with service}}

            <h2 class="ms-3 my-3">{{title}}</h2>
            <p class="m-3">{{description}}</p>
            <div>
                {{#each buttons}}
                <div class="mx-3 my-3">
                    <a href="{{link}}" class="btn btn-primary">{{text}}<a>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>
    </section>
    {{!---------------------------------End #4---------------------------------}}

</main>

<hr class="mt-5">

{{!--------------------------------Up-to down #5-------------------------------}}
<footer>
    <div class="col-9">
        <div class="row">

            <div class="nav">
                <div class="nav-item">

                    <table>
                        <tr>
                            {{#each footer}}
                            <td>
                                {{#each .}}

                                {{#if link}}
                                <a href="{{link}}" class="nav-link">{{text}}</a>
                                {{else}}
                                <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                                {{/if}}

                                {{/each}}
                            </td>
                            {{/each}}
                        </tr>
                    </table>

                </div>
            </div>

        </div>
    </div>
</footer>
{{!-----------------------------------End #5-----------------------------------}}

