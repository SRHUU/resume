{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<main class="mt-4 mx-4">
    <div>
        {{#with page_header}}
        <h1 class="text-center">{{title}}</h1>

        <p class="text-center mt-2">{{description}}</p>
        {{/with}}
    </div>


    <div class="mt-2">
        {{#with section}}

        <div class="card">
            <div class="card-body">


                {{#with about_us}}
                <div>
                    {{#with title_list}}
                    <div class="display-6 text-end mb-2">{{main}}</div>

                    <h2 class="text-end">{{sub}}</h2>
                    {{/with}}

                    <div class="mt-4">
                        {{#with button}}
                        <div>
                            <button class="btn btn-outline-info">{{text}}</button>
                        </div>
                        {{/with}}

                    </div>
                </div>
                {{/with}}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                {{#with advantage}}
                <div>

                    <div class="display-5 my-4">{{title}}</div>

                    <div class="card mt-4">
                        <div class="card-body">
                            {{#with efficiency}}
                            <div class="display-4">{{title}}</div>

                            <h6 class="my-3">{{sub_title}}</h6>

                            <p>{{description}}</p>

                            <div class="mt-4">
                                <button class="btn btn-outline-warning">{{button}}</button>
                            </div>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with innovation}}
                            <div class="display-4 text-center">{{title}}</div>

                            <h6 class="text-center my-3">{{sub_title}}</h6>

                            <p class="text-center mb-3">{{description}}</p>

                            <div>
                                <button class="btn btn-outline-warning mt-4">{{button}}</button>
                            </div>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            {{#with collaboration}}
                            <div class="display-4 text-end">{{title}}</div>

                            <h6 class="text-end my-3">{{sub_title}}</h6>

                            <p class="text-end mb-3">{{description}}</p>

                            <div>
                                <button class="btn btn-outline-warning mt-4">{{button}}</button>
                            </div>
                            {{/with}}
                        </div>
                    </div>

                </div>
                {{/with}}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                {{#with agreement}}
                <div class="display-5">{{title}}</div>

                <div class="card mt-2">
                    <div class="card-body">
                        {{#with info}}
                        <h5>{{sub_title}}</h5>

                        <div class="card mt-2">
                            <div class="card-body">
                                {{#with detail}}
                                <p>{{text}}</p>

                                <div>
                                    <button class="btn btn-success mt-4">{{button}}</button>
                                </div>

                                {{/with}}
                            </div>
                        </div>

                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>

        {{/with}}
    </div>
</main>



