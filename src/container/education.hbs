{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My Educations" big=true }}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}

                    {{#unless isEnd}} (ще в порцесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My Certificates" big=false }}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    (ID:{{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

